<h2>Change name for @Model.GetName()</h2>
<form action="/venues/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="venue-id" type="hidden" value="@Model.GetId()">
  <label for="venue-name">New venue name</label>
  <input id="venue-name" name="venue-name" type="text">
  <button type="submit">Change name</button>
</form>
