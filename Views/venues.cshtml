<h1>The Venues.</h1>
<hr>
<table>
@if(Model.Count == 0) {
  <tr>
    <td>there are no venues currently</td>
  </tr>
}
@foreach(var venue in Model) {
  <tr>
    <td>@venue.GetName()</td>
    <td><a href="/venues/bands/@venue.GetId()">see bands who have played a show at @venue.GetName()</a></td>
    <td><a href="/venues/delete/@venue.GetId()">REMOVE THIS VENUE</a></td>
    <td><a href="/venues/edit/@venue.GetId()">CHANGE THIS VENUE'S NAME</a></td>
  </tr>
}
</table>
<hr>
<a href="/venues/add">Add a venue</a><br>
<a href="/">Go home</a><br>
<a href="/bands">View all bands</a><br>
<hr>
<h4>Delete all venues?</h4>
<form action="/venues/delete/all" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <label for="confirm">Confirm delation of all venues (<em>cannot be undone!</em>)</label>
  <input type="checkbox" name="confirm">
  <button type="submit">Remove All Venues</button>
</form>
